import time

class Washer:
    def __init__(self):
        self.state = "IDLE"

    def fill_water(self):
        print("Filling water...")
        time.sleep(2)

    def wash(self):
        print("Washing...")
        for _ in range(5):
            print("Motor: slow spin LEFT")
            time.sleep(1)
            print("Motor: slow spin RIGHT")
            time.sleep(1)

    def rinse(self):
        print("Rinsing...")
        time.sleep(3)

    def spin(self):
        print("Spinning for water removal...")
        time.sleep(3)

    def anti_wrinkle(self):
        print("Anti-wrinkle phase:")
        for _ in range(10):
            print("Drum tumble slowly to prevent wrinkles…")
            time.sleep(0.5)

    def dry(self):
        print("Drying with warm air...")
        for _ in range(6):
            print("Fan + heater LOW + slow drum rotation")
            time.sleep(1)

    def full_cycle(self):
        self.state = "RUNNING"
        self.fill_water()
        self.wash()
        self.rinse()
        self.spin()
        self.dry()
        self.anti_wrinkle()
        self.state = "DONE"
        print("Laundry completed without wrinkles ✔")
